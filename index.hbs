{{!< default}}

<div class="wrapper">
	<header class="header">
		<div class="logo"{{#if @blog.cover}} style="background: url({{@blog.cover}});"{{/if}}>
			<h1>{{@blog.title}}</h1>			
		</div>
	</header>

	<section class="articles">
		{{#foreach posts}}

	    <article class="{{post_class}}">
	        <header class="post-header">
	            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>	            
	            <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
	        </header>
	        <section class="post-excerpt">
	            <p>{{excerpt}}&hellip;</p>
	        </section>
	    </article>

	    {{/foreach}}

	    {{pagination}}
	</section>
</div>